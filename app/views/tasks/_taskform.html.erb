<%= form_with model: [ @project,@project.tasks.create ]  do |form| %>
  <div class="form">
    
    <div class = "float-end" >
      <%= select_tag('label', options_from_collection_for_select(Label.all, 'id', 'label'), prompt: "Label") %>
    </div>
    
    <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field :title %>
    </div>
    
    <div class="mb-3">
    <%= form.label :status %>
    <%= form.select :status, ['Not Started', 'Doing', 'Done'] %>
    </div>

    <div class="mb-3">
    <%= form.label :reporter %>
    <%= form.select :reporter_id, User.all.map{|u| [u.email, u.id]}, {}  %>
    <!--<%= form.select :reporter_id, User.pluck(:email) %>-->
    </div>
    

    <div class="mb-3">
      <%= form.label :documents %>
      <%= form.file_field :documents, multiple: true %>
    </div>

    <%= form.hidden_field :project_id, value: @project.id %>
    <%= form.hidden_field :assignee_id, value: current_user.id %>

    <div class="mb-3">
      <%= form.submit  %>
    </div>
  </div>
<% end %>
