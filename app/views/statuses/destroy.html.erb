<%= fields model: @daily_status do |form| %>
  <%= form.fields_for :statuses, child_index: params[:index] do |status_form| %>
    <%= turbo_frame_tag "status_#{status_form.index}" do %>
      <%= status_form.hidden_field :id, value: params[:id] %>
      <%= status_form.hidden_field :_destroy, value: true %>
    <% end %>
  <% end %>
<% end %>